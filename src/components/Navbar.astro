---
import { Icon } from 'astro-icon/components';

const mainTitle = "Who Said Underwriting ";
const secondaryTitle = "Senior Care Liability";
const highlight = "Is Just Legalized Gambling?";
---

<nav 
  id="navbar"
  class="w-full py-2 px-4 md:px-8 lg:px-23 bg-[#0c285e] static top-0 left-0 right-0 z-50 transition-all duration-300 ease-in-out text-white"
>
  <div class="max-w-[1400px] mx-auto flex justify-center sm:justify-start items-center py-3 sm:py-4 md:py-0 lg:mt-4">
    <div class="flex items-center">
      <img 
        src="/images/sca-logo-y.png" 
        alt="SeniorCare Alliance" 
        class="w-52 sm:w-64 md:w-80 lg:w-96 h-auto max-h-32 sm:max-h-28 md:max-h-36 object-contain transition-all duration-300" 
      />
      <h1
          class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl text-white font-semibold tracking-wide sm:mb-6"
        >
          {mainTitle}<span class="text-[#4A9FFF]">{secondaryTitle}</span> {highlight}
        </h1>
    </div>
  </div>
</nav>

<script>
  // Toggle mobile menu
  document.getElementById('menu-button')?.addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (event) => {
    const mobileMenu = document.getElementById('mobile-menu');
    const menuButton = document.getElementById('menu-button');
    
    if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
      const isClickInsideMenu = mobileMenu.contains(event.target as Node);
      const isClickOnButton = menuButton?.contains(event.target as Node);
      
      if (!isClickInsideMenu && !isClickOnButton) {
        mobileMenu.classList.add('hidden');
      }
    }
  });
</script>

<style>
  .navbar-link-dropdown {
    cursor: pointer;
    display: flex;
    align-items: center;
    transition: color 0.2s ease;
  }
  
  .navbar-link-dropdown:hover {
    color: #4A9FFF; /* Updated hover color for better visibility on dark background */
  }

  @media (max-width: 768px) {
    #mobile-menu {
      animation: slideDown 0.3s ease-out;
    }
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style> 