---
import { Icon } from 'astro-icon/components';
---

<nav 
  id="navbar"
  class="w-full py-2 px-4 md:px-8 lg:px-23 bg-[#0c285e] static top-0 left-0 right-0 z-50 transition-all duration-300 ease-in-out text-white"
>
  <div class="max-w-[1400px] mx-auto flex justify-between items-center py-2 md:py-4 lg:mt-10">
    <div class="flex items-center space-x-4 md:space-x-8">
      <img src="/images/logo.svg" alt="SeniorCare Alliance" class="w-48 sm:w-64 md:w-80 lg:w-96 h-auto md:h-36" />
    </div>
    
    <div class="flex items-center">
      <div class="lg:hidden">
        <button id="menu-button" class="focus:outline-none text-white p-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div id="mobile-menu" class="hidden lg:hidden p-4 bg-[#0c285e] shadow-lg text-white rounded-b-lg">
    <div class="flex flex-col space-y-4">
      <div class="flex items-center justify-between py-2 border-b border-white/10">
        <div>Pricing platform</div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 9l6 6 6-6"/>
        </svg>
      </div>
      <div class="flex items-center justify-between py-2 border-b border-white/10">
        <div>Reserving platform</div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 9l6 6 6-6"/>
        </svg>
      </div>
      <div class="flex items-center justify-between py-2 border-b border-white/10">
        <div>Resources</div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 9l6 6 6-6"/>
        </svg>
      </div>
      <div class="flex items-center justify-between py-2 border-b border-white/10">
        <div>About</div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 9l6 6 6-6"/>
        </svg>
      </div>
      <div class="flex items-center justify-between border-t border-white/20 pt-4 mt-2">
        <div>Language</div>
        <div class="flex items-center">
          <span class="font-medium">EN</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-1">
            <path d="M6 9l6 6 6-6"/>
          </svg>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  // Toggle mobile menu
  document.getElementById('menu-button')?.addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking outside
  document.addEventListener('click', (event) => {
    const mobileMenu = document.getElementById('mobile-menu');
    const menuButton = document.getElementById('menu-button');
    
    if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
      const isClickInsideMenu = mobileMenu.contains(event.target as Node);
      const isClickOnButton = menuButton?.contains(event.target as Node);
      
      if (!isClickInsideMenu && !isClickOnButton) {
        mobileMenu.classList.add('hidden');
      }
    }
  });
</script>

<style>
  .navbar-link-dropdown {
    cursor: pointer;
    display: flex;
    align-items: center;
    transition: color 0.2s ease;
  }
  
  .navbar-link-dropdown:hover {
    color: #4A9FFF; /* Updated hover color for better visibility on dark background */
  }

  @media (max-width: 768px) {
    #mobile-menu {
      animation: slideDown 0.3s ease-out;
    }
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style> 