---
import { Icon } from 'astro-icon/components';
---

<nav 
  id="navbar"
  class="w-full  py-2 px-4 md:px-8 lg:px-23 bg-[#0c285e] static top-0 left-0 right-0 z-50 transition-all duration-300 ease-in-out text-white"
>
  <div class="max-w-[1400px] mt-10 mx-auto flex justify-between items-center">
    <div class="flex items-center space-x-8">
      <img src="/images/logo.svg" alt="SeniorCare Alliance" class="w-96 pl-2 h-36" />
    
    <div class="flex items-center space-x-4">

      <div class="lg:hidden">
        <button id="menu-button" class="focus:outline-none text-white">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div id="mobile-menu" class="hidden lg:hidden p-4 bg-[#0c285e] shadow-lg text-white">
    <div class="flex flex-col space-y-4">
      <div class="flex items-center justify-between">
        <div>Pricing platform</div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 9l6 6 6-6"/>
        </svg>
      </div>
      <div class="flex items-center justify-between">
        <div>Reserving platform</div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 9l6 6 6-6"/>
        </svg>
      </div>
      <div class="flex items-center justify-between">
        <div>Resources</div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 9l6 6 6-6"/>
        </svg>
      </div>
      <div class="flex items-center justify-between">
        <div>About</div>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M6 9l6 6 6-6"/>
        </svg>
      </div>
      <div class="flex items-center justify-between border-t border-white/20 pt-4 mt-2">
        <div>Language</div>
        <div class="flex items-center">
          <span class="font-medium">EN</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-1">
            <path d="M6 9l6 6 6-6"/>
          </svg>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  // Toggle mobile menu
  document.getElementById('menu-button')?.addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenu?.classList.toggle('hidden');
  });
</script>

<style>
  .navbar-link-dropdown {
    cursor: pointer;
    display: flex;
    align-items: center;
    transition: color 0.2s ease;
  }
  
  .navbar-link-dropdown:hover {
    color: #4A9FFF; /* Updated hover color for better visibility on dark background */
  }
</style> 